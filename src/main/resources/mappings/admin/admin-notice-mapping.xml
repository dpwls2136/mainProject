<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="NoticeDAO">
	<insert id="insertNotice" parameterType="com.thisisthat.admin.notice.vo.NoticeVO">
		insert into notice_board(board_title,board_content,board_group,board_writer) 
		values(#{board_title},#{board_content},#{board_group},#{board_writer})
	</insert>
	<update id="updateNotice" parameterType="com.thisisthat.admin.notice.vo.NoticeVO">
		update notice_board set board_title=#{board_title}, board_content=#{board_content},board_view=#{board_view} where board_no=${board_no}
	</update>
	<delete id="deleteNotice" parameterType="com.thisisthat.admin.notice.vo.NoticeVO">
		delete from notice_board where board_no=#{board_no}
	</delete>
	<select id="notice" resultType="com.thisisthat.admin.notice.vo.NoticeVO">
		select * from notice_board where board_no=#{board_no}
	</select>
	<select id="noticeList" resultType="com.thisisthat.admin.notice.vo.NoticeVO">
		select * from notice_board where board_group=#{board_group} order by board_view asc, board_no desc
	</select>
	
	
</mapper>
