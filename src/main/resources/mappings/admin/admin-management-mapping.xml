<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserManagementDAO">
	<resultMap type="UserVO" id="resultUser1">
		<id property="userId" column="user_id"></id>
		<result property="userName" column="user_name"/>
		<result property="nickName" column="nick_name"/>
		<result property="userPw" column="user_pass"/>
		<result property="userPhone" column="user_phone"/>
		<result property="userEmail" column="user_email"/>
		<result property="zipCode" column="zip_code"/>
		<result property="firstAddress" column="first_address"/>
		<result property="lastAddress" column="last_address"/>
		<result property="userRole" column="user_role"/>
		<result property="inDate" column="in_date"/>
		<result property="outDate" column="out_date"/>
		<result property="userImg" column="user_img"/>
		<result property="social" column="social_login"/>		
	</resultMap>
	
	<select id="getUser1" resultType="UserVO" parameterType="String" resultMap="resultUser1">
		select * from this_user where user_id = #{userId}
	</select>
	<select id="getUserList1" parameterType="UserVO" resultMap="resultUser1">
		select * from this_user where <![CDATA[ user_role > 99  ]]>
		<if test="select=='id'">
			and user_id like '%'||#{search}||'%'
		</if>
		<if test="select=='nickname'">
			and nick_name like '%'||#{search}||'%'
		</if>
		order by in_date desc 
	</select>	
	
	
	<select id="getStaffList" resultMap="resultUser1" resultType="UserVO" parameterType="UserVO">
		select * from this_user where <![CDATA[ user_role < 51 order by in_date desc ]]>
	</select>
	
	<select id="getStaff" resultType="UserVO" parameterType="UserVO" resultMap="resultUser1">
		select * from this_user where user_id=#{id}
	</select>
	
	<update id="getUserUpdate" parameterType="UserVO">
		update this_user set user_role=#{userRole} where user_id=#{userId}	
	</update>
	
	
	
	
</mapper>
